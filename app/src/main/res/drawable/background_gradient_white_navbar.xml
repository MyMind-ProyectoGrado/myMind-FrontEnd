<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="@color/pastelPurple"
                android:endColor="@color/pastelBlue"
                android:angle="90"/>
        </shape>
    </item>
    <item
        android:top="14dp"
        android:bottom="95dp"
        android:left="14dp"
        android:right="14dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <!-- Optional: Rounded corners -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</layer-list>