<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.MyMindV2" parent="Theme.Material3.Light.NoActionBar">
    <!-- Apply font globally -->
        <item name="android:fontFamily">@font/poppins_regular</item>

        <item name="colorPrimary">@color/lightPurple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/deepPurple</item>
        <item name="colorControlHighlight">@color/deepPurple</item>

        <!-- Override Material 3 text styles -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MyApp</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MyApp</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MyApp</item>
        <item name="materialAlertDialogTheme">@style/MyAlertDialogStyle</item>

    </style>

    <style name="TimePickerPurple" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:colorAccent">@color/deepPurple</item>
        <item name="android:textColor">@color/deepPurple</item>
    </style>

    <style name="TextAppearance.MyApp" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Theme.MyMindV2" parent="Base.Theme.MyMindV2" />

</resources>
